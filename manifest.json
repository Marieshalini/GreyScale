{
  "manifest_version": 3,
  "name": "Colorblind Accessibility",
  "version": "1.0",
  "description": "Enhance website color visibility for colorblind users.",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Colorblind Accessibility"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
  {
    "resources": ["filters/colorblind.svg"],
    "matches": ["<all_urls>"]
  }
],

  "icons": {
    "128": "icons/icon128.png"
  }
}
